<Window x:Class="AccManager2.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccManager2"
        mc:Ignorable="d"
        Title="Login" Height="368.201" Width="300" FontSize="14" Background="#1a1a1a" WindowStartupLocation="CenterScreen" >
    <Border Background="#252526" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Name="lblError" Content="" Foreground="Red" FontSize="10" HorizontalAlignment="Center"/>
            <Label Content="sagi's Account Manager" Foreground="White" FontSize="18" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" />
            <TextBox Name="txtUsername" Background="#686868" FontSize="18"/>
            <Label Content="Password" Foreground="White" />
            <PasswordBox Name="txtPassword" Background="#686868" FontSize="18"/>
            <Button Name="btnLogin" Content="Login" Margin="70,20,70,70" Foreground="White" Background="#686868" FontSize="18" BorderThickness="2" BorderBrush="Black" Height="34" Click="BtnLogin_Click"/>
        </StackPanel>
    </Border>
</Window>
